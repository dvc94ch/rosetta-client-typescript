{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "sourceMap": true,
    "noEmitOnError": true,
    "lib": [
      "es6",
      "dom",
      "es2016",
      "es2017"
    ],
    "outDir": "./lib",
    "declaration": true,
    "baseUrl": ".",
    "paths": {
      "rosetta-client-typescript": [
        "./src"
      ]
    },
    "esModuleInterop": true,
    "skipLibCheck": true,
    "types": [
      "node"
    ]
  },
  "exclude": [
    "node_modules",
    "dist"
  ],
  "include": [
    "src/**/*"
  ]
}
